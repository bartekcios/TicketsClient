<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bartekcios.ticketsclient.MyAccountActivity">

    <Button
        android:text="@string/activity_my_account_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonBack"
        android:onClick="goToMainMenu" />

    <TextView
        android:text="@string/activity_my_account_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUsername"
        android:layout_alignBaseline="@+id/editTextUsername"
        android:layout_alignBottom="@+id/editTextUsername"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPassword"
        android:layout_alignBaseline="@+id/editTextPassword"
        android:layout_alignBottom="@+id/editTextPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmail"
        android:layout_alignBaseline="@+id/editTextEmail"
        android:layout_alignBottom="@+id/editTextEmail"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFirstName"
        android:layout_alignBaseline="@+id/editTextFirstName"
        android:layout_alignBottom="@+id/editTextFirstName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLastName"
        android:layout_alignBaseline="@+id/editTextLastName"
        android:layout_alignBottom="@+id/editTextLastName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBalance"
        android:layout_alignBaseline="@+id/editTextBalance"
        android:layout_alignBottom="@+id/editTextBalance"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_my_account_recharge_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRecharge"
        android:layout_alignBaseline="@+id/editTextRecharge"
        android:layout_alignBottom="@+id/editTextRecharge"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBarLoading" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextUsername"
        android:hint="@string/activity_my_account_hint_username"
        android:layout_below="@+id/progressBarLoading"
        android:layout_alignStart="@+id/editTextPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:hint="@string/activity_my_account_hint_password"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignStart="@+id/editTextFirstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextFirstName"
        android:hint="@string/activity_my_account_hint_first_name"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextLastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextLastName"
        android:hint="@string/activity_my_account_hint_last_name"
        android:layout_below="@+id/editTextFirstName"
        android:layout_alignStart="@+id/editTextEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:hint="@string/activity_my_account_hint_email"
        android:layout_below="@+id/editTextLastName"
        android:layout_alignStart="@+id/editTextBalance" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextBalance"
        android:hint="@string/activity_my_account_hint_balance"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignStart="@+id/editTextRecharge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRecharge"
        android:hint="@string/activity_my_account_hint_recharge_your_account"
        android:text="@string/activity_my_account_hint__0"
        android:layout_below="@+id/editTextBalance"
        android:layout_alignStart="@+id/buttonRecharge" />

    <Button
        android:text="@string/activity_my_account_button_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRecharge"
        android:layout_below="@+id/editTextRecharge"
        android:layout_alignStart="@+id/buttonBack" />

</RelativeLayout>
